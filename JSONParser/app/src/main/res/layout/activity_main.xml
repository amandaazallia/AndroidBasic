<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.android.jsonparser.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/buttonParserContact"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="getContacts"
            android:text="example : JSON PARSER CONTACTS"
            />
        <Button
            android:id="@+id/buttonParserCampaign"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="getCampaign"
            android:text="get campaign"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
